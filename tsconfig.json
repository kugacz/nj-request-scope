{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "sourceMap": false,
    "outDir": "lib",
    "strict": true,
    "allowJs": false,
    "lib": ["es2021"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
